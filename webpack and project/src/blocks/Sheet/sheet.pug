mixin sheet(name)
  if name=="ColorsAndTypes"
    div(class=`sheet ${name}`)
      div.sheet__inner
        include logo.svg
      div.colors-wrapper
        +color("Dark Shade 100%", "#1F2041", 'dark100')
        +color("Dark Shade 75%", "#1F2041", 'dark75')
        +color("Dark Shade 50%", "#1F2041", 'dark50')
        +color("Dark Shade 25%", "#1F2041", 'dark25')
        +color("Dark Shade 5%", "#1F2041", 'dark5')
        +color("Purple", "#BC9CFF", 'purple')
        +color("Green", "#6FCF97", 'green')

      div.fonts-wrapper
        +font("H1", "This one is the sub-section or widget title")
        +font("H2", "Next one is the item title inside widgets")
        +font("H3", "This is a label or cta text")
        +font("Body", "This is the body text which is used for most of the design, like paragraphs, lists, etc.")

  if name=="Cards"
    div(class=`sheet ${name}`)
      div.sheet__inner
        include logo.svg

  if name=="HeadersAndFooters"
    div(class=`sheet ${name}`)
      div.sheet__inner
        include logo.svg

  if name=="FormElements"
    div(class=`sheet ${name}`)
      div.sheet__inner
        include logo.svg
      div.textfields-wrapper
        +textfield("Text Field", "", "Email", 'Default')
      div.textfields-hover-wrapper
        +textfield("Text Field", "This is pretty awesome", "", 'Hover / Focus')
      div.dropdowns-guests-wrapper
        +dropdown("Dropdown", "", "Сколько гостей", 'Default', '', 'dropdown-guests')
      div.textfields-data-wrapper  
        +textfield("Masked Text Field", "", "ДД.ММ.ГГГГ", 'Default') 
      div.dropdowns-data-wrapper
        +dropdown("Date Dropdown", "", "ДД.ММ.ГГГГ", '', '', 'dropdown-date')
        +dropdown("Date Dropdown", "19.08.2019", "ДД.ММ.ГГГГ", '', '', 'dropdown-date')
      div.dropdowns-filter-data-wrapper
        +dropdown("Filter Date Dropdown", "19 авг - 23 авг", "")
      div.textfields-subscription-wrapper  
        +textfield("Subscription Text Field", "", "Email")
      div.dropdowns-rooms-wrapper
        +dropdown("Dropdown", "", "2 спальни, 2 кровати...", 'Default', '', 'dropdown-rooms')
      div.dropdowns-roomsExp-wrapper
        +dropdown("Dropdown", "", "2 спальни, 2 кровати...", 'expanded', 'expanded', 'dropdown-rooms')
      div.checkbox-list-wrapper
        +checkbox("Expandable Checkbox List", '', '1')
      div.checkbox-list-expanded-wrapper
        +checkbox("Expandable Checkbox List", 'expanded', '2')
      div.advantages-wrapper
        +advantage('mood', "Комфорт", "Шумопоглощающие стены")
        +advantage('location_city', "Удобство", "Окно в каждой из спален")
      div.checkbox-buttons-wrapper
        +checkbox("Checkbox Buttons")
      div.radiobuttons-wrapper
        +radiobutton("Radio Buttons")
      div.toggle-checked-wrapper
        +toggle("Toggle", 'checked')
      div.toggle-wrapper
        +toggle("")
      div.likebutton-wrapper
        +likebutton("Like Button")
      div.likebutton-checked-wrapper
        +likebutton("", 'checked')
      div.ratebutton-wrapper
        +ratebutton("Rate Button", '4', '1')
      div.ratebutton-full-wrapper
        +ratebutton("", '5', '2')
      div.dropdowns-guestsExpE-wrapper
        +dropdown("Dropdown", "", "Сколько гостей", '', 'expanded', 'dropdown-guests')
      div.rich-checkbox-buttons-wrapper
        +checkbox("Rich Checkbox Buttons")
      div.rangeslider-wrapper
        +rangeslider("Range Slider")
      div.button-default-v-wrapper
        +button("Buttons", 'default-v')
      div.button-hover-v-wrapper
        +button("", 'hover-v')
      div.button-default-w-wrapper
        +button("", 'default-w')
      div.button-hover-w-wrapper
        +button("", 'hover-w')
      div.textbutton-v-wrapper
        +textbutton("Click Me", 'v')
      div.textbutton-g-wrapper
        +textbutton("Click Me", 'g')